<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightofcardview"
    android:clickable="true"
    android:id="@+id/temp"
    android:layout_marginLeft="@dimen/margins"
    android:layout_marginRight="@dimen/margins"
    android:layout_marginBottom="@dimen/margins"
    android:elevation="@dimen/cardviewelevation"
    app:cardCornerRadius="@dimen/cornerradiuscardview">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/workoutImageView"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/workoutTextView"
        android:textSize="@dimen/sizetext"
        android:background="@color/mainTextBack"
        android:layout_marginTop="@dimen/cardviewtextviewmargin"
        />

</android.support.v7.widget.CardView>